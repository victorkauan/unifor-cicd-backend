generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum ProductStatus {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}

model Product {
  id         Int           @id @default(autoincrement())
  name       String
  price      Float
  quantity   Int
  status     ProductStatus
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt

  @@map("products")
}
